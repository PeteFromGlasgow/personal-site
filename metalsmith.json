{
  "metadata": {
    "title": "My Blog",
    "description": "My second, super-cool blog."
  },
  "plugins": {
    "metalsmith-collections":{
      "blogposts": {
        "pattern": "*.md",
        "sortBy": "date",
        "reverse": true
      }
    },
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":title"
    },
    "metalsmith-layouts": {
      "engine": "swig"
    },
    "metalsmith-assets": {
      "source": "./public",
      "destination": "./public"
    },
    "./bower.js": {
      "includeCss": false,
      "includeScss": false
    },
    "metalsmith-concat": {
      "files": [
        "public/jquery.js",
        "public/foundation.js",
        "public/lodash.js"
      ],
      "output": "public/vendor.js"
    },
    "metalsmith-uglify":{
      "removeOriginal": false
    },
    "metalsmith-sass": {
      "outputStyle": "expanded"
    },
    "metalsmith-watch": {
      "paths": {
        "${source}/**/*": true,
        "public/**/*.scss": true,
        "layouts/**/*": true
      },
      "livereload": true
    },
    "metalsmith-express": {}
  }
}
